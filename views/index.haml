%html
  %body
    %h1
      = "List of all Repositories"
    %a(title = "Create new Repository"){:href => "/repo/new"} Create new Repository
    %p
      - if @shagit.repositories.length > 0
        - @shagit.repositories.each do |repository|
          %a(title = "#{repository.shagit_name}"){:href => "/repo/#{repository.shagit_foldername}" } #{repository.shagit_name}
      - else
        = "No repositories were found."

